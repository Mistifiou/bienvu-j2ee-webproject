<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="${artifactId}">
	
	<modules>		

		<module id="${rootArtifactId}-util" dir="__rootArtifactId__-util"
			name="${rootArtifactId}-util">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/main/resources</directory>
				</fileSet>				
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/test/resources</directory>
				</fileSet>
			</fileSets>
		</module>
	
		<module id="${rootArtifactId}-ejb" dir="__rootArtifactId__-ejb"
			name="${rootArtifactId}-ejb">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/main/resources</directory>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/test/resources</directory>
				</fileSet>
			</fileSets>
		</module>		

		<module id="${rootArtifactId}-war" dir="__rootArtifactId__-war"
			name="${rootArtifactId}-war">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/main/resources</directory>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/test/resources</directory>
				</fileSet>
				<fileSet filtered="true">
					<directory>src/main/resources</directory>

					<!--Filters example -->
					<includes>
						<include>*.txt</include>
					</includes>
					<excludes>
						<exclude>**/*.xml</exclude>
					</excludes>
				</fileSet>

				<fileSet filtered="true">
					<directory>src/main/webapp</directory>

					<!--Filters example -->
					<includes>
						<include>*.xhtml</include>
					</includes>
				</fileSet>
				<fileSet filtered="true">
					<directory>src/main/webapp/WEB-INF</directory>

					<!--Filters example -->
					<includes>
						<include>*.xml</include>
					</includes>
				</fileSet>

				<fileSet filtered="true">
					<directory>src/main/webapp/resources/js</directory>

					<!--Filters example -->
					<includes>
						<include>*.js</include>
					</includes>
				</fileSet>

				<fileSet filtered="true">
					<directory>src/main/webapp/resources/css</directory>

					<!--Filters example -->
					<includes>
						<include>*.css</include>
					</includes>
				</fileSet>
			</fileSets>
		</module>
		
		<module id="${rootArtifactId}-ear" dir="__rootArtifactId__-ear"
			name="${rootArtifactId}-ear">
		</module>
		
		<module id="${rootArtifactId}-model" dir="__rootArtifactId__-model"
			name="${rootArtifactId}-model">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8" filtered="true">
					<directory>src/main/resources</directory>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/java</directory>
				</fileSet>
				<fileSet encoding="UTF-8">
					<directory>src/test/resources</directory>
				</fileSet>
			</fileSets>
		</module>
	</modules>
	
	<!-- attributs du projet -->
	<requiredProperties>
		<!-- MODEL MODULE -->
		<requiredProperty key="hibernatecore-version">
			<defaultValue>5.2.10.Final</defaultValue>
		</requiredProperty>
		
		<requiredProperty key="eclipsepersistencecore-version">
			<defaultValue>2.6.4</defaultValue>
		</requiredProperty>
		
		<requiredProperty key="eclipsepersistencejpa-version">
